<div class="company-box">
	<%= link_to (image_tag company.image(:medium)), company %>
	<h4><%= company.name %></h4>
	<%= company.description %>
<p>
	<%= link_to 'Edit', edit_company_path(company) %>
	<% if company.user == current_user %>
		|
		<%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>
</p>
</div>
